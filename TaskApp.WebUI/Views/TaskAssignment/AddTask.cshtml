@model TaskAssignment
    <form asp-controller="TaskAssignment" asp-action="AddTask" method="post">

        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <label>User</label>
                            </div>
                            <div class="col-md-6">
                                <select class="form-control" asp-items="ViewBag.Users" asp-for="UserId">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Tasks</label>
                            </div>
                            <div class="col-md-6">
                                <select class="form-control" asp-items="ViewBag.Tasks" asp-for="TaskId">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <table class="table table-sm table-dark">
                    <tr>
                        <td>Select</td>
                        <td>Title</td>
                        <td>Document</td>
                    </tr>
                    @foreach (var document in ViewBag.Documents)
                    {
                        <tr>
                            <td><input type="checkbox" name="documentIds" value="@document.DocumentId" /></td>
                            <td>@document.DocumentTitle</td>
                            <td>
                                <img src="~/images/@document.ImageUrl" width="100" alt="Alternate Text" />
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <button type="submit" class="btn btn-secondary btn-sm mb-5">Create</button>
    </form>
